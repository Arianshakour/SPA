<!DOCTYPE html>
<html lang="en" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SPA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SPA.Presentation.styles.css" asp-append-version="true" />
    <link href="~/lib/qqq/css/normalize.css" rel="stylesheet" />
    <link href="~/lib/qqq/css/persiandatepicker-dark.css" rel="stylesheet" />
    <link href="~/lib/qqq/css/persiandatepicker-default.css" rel="stylesheet" />
    <link href="~/lib/qqq/css/persiandatepicker-latoja.css" rel="stylesheet" />
    <link href="~/lib/qqq/css/persiandatepicker-lightorang.css" rel="stylesheet" />
    <link href="~/lib/qqq/css/persiandatepicker-melon.css" rel="stylesheet" />
    <link href="~/lib/fontawesome/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SPA</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="List">List</a>
                        </li>
                        <li class="nav-item">
                            <label class="switch">
                                <input type="checkbox" id="darkModeToggle">
                                <span class="slider round"></span>
                            </label>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SPA
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/qqq/js/angular.min.js"></script>
    <script src="~/lib/qqq/js/jquery-1.10.1.min.js"></script>
    <script src="~/lib/qqq/js/persiandatepicker.js"></script>
    <script src="~/lib/qqq/js/persiandatepicker.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @RenderSection("Script", false)
</body>
</html>
<script>
    document.addEventListener('DOMContentLoaded', (event) => {
        // بررسی وضعیت دارک مود در Local Storage
        const isDarkMode = localStorage.getItem('darkMode') === 'true';

        if (isDarkMode) {
            document.body.classList.add('dark-mode');
            document.getElementById('darkModeToggle').checked = true; // اگر از سوئیچ استفاده می‌کنید
        }

        // افزودن رویداد برای سوئیچ دارک مود
        document.getElementById('darkModeToggle').addEventListener('change', function () {
            const isDarkMode = this.checked;
            document.body.classList.toggle('dark-mode', isDarkMode);
            localStorage.setItem('darkMode', isDarkMode); // ذخیره وضعیت دارک مود
        });
    });
</script>