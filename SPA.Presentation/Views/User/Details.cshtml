@using SPA.Domain.Common
@using SPA.Domain.Dtoes
@model DetailsUserDto

@{
    ViewData["Details"] = "جزییات";
}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <form id="detailsUserForm" method="post" style="text-align:center">
                <h2>جزییات کاربر</h2>
                <div class="input-group2">
                    <label asp-for="@Model.Name" class="control-label"></label>
                    <input asp-for="@Model.Name" class="form-control" readonly />
                </div>
                <div class="input-group2">
                    <label asp-for="@Model.Family" class="control-label"></label>
                    <input asp-for="@Model.Family" class="form-control" readonly />
                </div>
                <div class="input-group2">
                    <label asp-for="@Model.Address" class="control-label"></label>
                    <input asp-for="@Model.Address" class="form-control" readonly />
                </div>
                <div id="phoneNumbersContainerr">
                    @if (Model.PhoneNumbers != null && Model.PhoneNumbers.Any())
                    {
                        @for (int i = 0; i < Model.PhoneNumbers.Count; i++)
                        {
                            //hatman name ra bedone @Model benevis vagarna null mishe yani name="PhoneNumbers[@i].Number"
                            <div class="form-group phone-number-group" id="ph_@i">
                                <label class="control-label">شماره تلفن</label>
                                <div class="d-flex">
                                    <input type="hidden" name="PhoneNumbers[@i].Id" value="@Model.PhoneNumbers[@i].Id" readonly />
                                    <input type="text" name="PhoneNumbers[@i].Number" value="@Model.PhoneNumbers[@i].Number" class="form-control" readonly />
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <span>شماره تلفنی در سیستم ثبت نشده است</span>
                    }
                </div>
                <div class="input-group2">
                    <label asp-for="@Model.Age" class="control-label"></label>
                    <input asp-for="@Model.Age" class="form-control" readonly />
                </div>
                <div class="input-group2">
                    <label asp-for="@Model.Brithday" class="control-label"></label>
                    <input asp-for="@Model.PersianBrithday" class="form-control" readonly />
                </div>
                <div class="input-group2 align-items-center mb-5" style="margin-top:8px">
                    <button type="button" class="btn btn-secondary" onclick="goBack()" style="width:200px;">بازگشت</button>
                </div>
            </form>
        </div>
    </div>
</div>